<div class="container create-restaurant d-flex justify-content-center fw-light mt-5" style="color: aliceblue;">

  <form action="/restaurant/{{ restaurant._id }}?_method=PUT" method="POST" class="w-50 px-5 d-flex flex-column">

    {{!-- 餐廳名稱 --}}
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" value="{{ restaurant.name }}" id="name" name="name"
        aria-describedby="name" required>
    </div>

    {{!-- 餐廳英文名稱 --}}
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳英文名稱</label>
      <input type="text" class="form-control" value="{{ restaurant.name_en }}" name="name_en" id="name_en">
    </div>

    {{!-- 排名 --}}
    <div class="mb-3">
      <label for="rating" class="form-label">評價星數</label>
      <input type="number" class="form-control" value="{{ restaurant.rating }}" name="rating" id="rating" min="1"
        max="5" step="0.1">
    </div>

    {{!-- 類別 --}}
    <div class="mb-3">
      <label for="category">類別</label>
      <input list="categories" class="form-control" value="{{ restaurant.category }}" name="category" id="category"
        required>
      <datalist id="categories">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    {{!-- 照片網址 --}}
    <div class="mb-3">
      <label for="image" class="form-label">圖片網址</label>
      <input type="text" class="form-control" value="{{ restaurant.image }}" name="image" id="image" required>
    </div>

    {{!-- 地址 --}}
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" value="{{ restaurant.location }}" name="location" id="location">
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">goole map 網址</label>
      <input type="text" class="form-control" value="{{ restaurant.google_map }}" name="google_map" id="google_map">
    </div>

    {{!-- 電話 --}}
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="text" class="form-control" value="{{ restaurant.phone }}" name="phone" id="phone">
    </div>

    {{!-- 簡介 --}}
    <div class="mb-3">
      <label for="description" class="form-label">簡介</label>
      <textarea type="text" class="form-control" name="description"
        id="description">{{ restaurant.description }}</textarea>
    </div>

    {{!-- 儲存 --}}
    <button type="submit" class="btn btn-secondary my-3">儲存修改</button>
  </form>

</div>